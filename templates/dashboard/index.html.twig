{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <div class="container" style="height: 100%;">
        <div class="section">
            <h3 class="header center black-text">Active Employee
                <a  href="{{ path('user_new') }}"
                    class="waves-effect waves-light btn"  style="float: right;">Add Employee</a>
            </h3>
            <div class="divider"></div>
            <div class="row">
                <div class="col s12">
                    <table class="striped responsive-table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.name }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.mobile }}</td>
                                <td>{{ user.isActive ? '<span class="badge green white-text">Active</span>' : '<span class="badge red white-text">Inactive</span>' }}</td>
                                <td>{{ user.datecreated ? user.datecreated|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                     <a href="{{ path('status', {'id': user.id}) }}"> <i class="small material-icons">visibility</i></a>&nbsp;&nbsp; <a href="{{ path('user_edit', {'id': user.id}) }}"> <i class="small material-icons">create</i></a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="10">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
